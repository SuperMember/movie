.meta {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.poster {
  width: 100%;
  height: 800rpx;
  margin: 20rpx;
}

.title {
  font-style: 42rpx;
  color: #444;
}

.info {
  font-size: 24rpx;
  color: #888;
  margin-top: 20rpx;
  width: 80%;
}

.summary {
  width: 80%;
  margin: 30rpx auto;
}

.comment{
  width: 80%;
  margin: 30rpx auto;
}


.label {
  display: block;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.content {
  color: #666;
  font-size: 22rpx;
  padding: 2em;
}

.background {
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  z-index: -1000;
  opacity: .1;
}

.submitBtn{
  background: #00bebe;
}

.list {
  height: 100%;
}
.list .tips {
    font-size: 28rpx;
    text-align: center;
    padding: 50rpx;
    color: #ccc;
}
.list .tips image,text {
      vertical-align: middle;
}
.list .tips image {
      width: 20rpx;
      height: 20rpx;
      margin-right: 20rpx;
}
.list .item {
    display: flex;
    border-bottom: 1rpx solid #eee;
    /* cursor: pointer; */
}
.list .item .poster {
      width: 80rpx;
      height: 80rpx;
      margin-right: 10rpx;
}
.list .item .rating text {
      display: inline-block;
      width: 40rpx;
      font-size: 28rpx;
      font-weight: bold;
      text-align: center;
      background-color: rgba(247, 76, 49, .8);
      color: #fff;
      padding: 10rpx;
      border-radius: 20rpx;
}
.list .item .metas {
      flex: 1;
      margin-right:10px; 
}
.list .item .metas .title,.sub-title {
        display: block;
        margin-bottom: 15rpx;
}
.list .item .metas  .title {
        font-size: 32rpx;
        color: #c0c0c0;
}
.list .item .metas  .sub-title {
        font-size: 32rpx;
        color: #000000;
}
.list .item .metas .artists {
        font-size: 24rpx;
        color: #999;
        margin-left: 100px;
}

.list .item .metas .artists image{
        width: 20px;
        height: 20px;
        margin-left: 20px;
}